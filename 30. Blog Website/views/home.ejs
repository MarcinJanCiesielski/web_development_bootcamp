<!DOCTYPE html>
<html lang="en">

<%- include("partials/header.ejs") %>

<body>
  
  <h1>Home</h1>
  <p> <%= homeStartingContent  %> </p>

  <% if (locals.posts) { %>
    <% for (let post of posts) {%>
      <h2>
        <%= post.title %> 
      </h2>
      <p>
        <%= post.content.substring(0, 100) + "..." %>
        <a href= <%= "/posts/" + post.title.toLowerCase().replaceAll(" ", "-") %>>Read More</a>
      </p>
    <% } %>
  <% } %>

</body>

  <%- include("partials/footer.ejs") %>

</html>
